    "svelte-heros-v2": "^2.0.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.6",
    "vitest": "^3.2.4"
